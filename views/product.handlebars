<div id="productsPage">
    
    <div id="sidebar">
        <ul>
            <li><form id="productsearch" action="/product" method="POST" width="100" height="100">
              
                <select name="productmenu">
                    <option value="Automotive">Automotive</option>
                    <option value="Arts & Crafts">Arts & Crafts</option>
                    <option value="Beauty and personal care">Beauty and personal care</option>
                    <option value="Computers">Computers</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Women's Fashion">Women's Fashion</option>
                    <option value="Men's Fashion">Men's Fashion</option>
                    <option value="Home and Kitchen">Home and Kitchen</option>
                    <option value="Toys and Games">Toys and Games</option>
                </select>
                <input id="button" type="submit" value="search">
                </form>
            </li>
          
        </ul>
    </div>
    <div id="products">
        
            {{#each data}}
            <div id="eachproducts">
                <a href="/productDesc/{{id}}">
                {{#if this.bestseller}}
                <img id="besticon" src ="pic/bestseller.PNG" ali="bestseller" width="40" height="40">
                {{/if}}
                <img id="productpic" src="pic/{{this.picture}}" ali="{{this.name}}">
                <p>{{this.name}}<br>->${{this.price}}</p>
                <p>Category: {{this.category}}</p>
                </a>
              
            </div>
            {{/each}}
        
    </div>
</div>